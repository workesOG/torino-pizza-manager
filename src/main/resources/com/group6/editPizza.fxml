      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="298.0">
         <children>
            <Button fx:id="saveChangesButton" layoutX="197.0" layoutY="360.0" mnemonicParsing="false" onAction="#saveAndClose" text="Save changes" />
